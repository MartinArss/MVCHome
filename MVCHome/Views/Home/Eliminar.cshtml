@model MVCHome.Models.Usuario
@{
    ViewData["Title"] = "Eliminar Usuario";
}

@*<h1><a></a>@ViewData["Title"]</h1>*@
<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white">
                    <strong>Eliminar usuario</strong>
                </h1>
            </div>
            <div class="card-body">
                <form asp-action="EliminarUsuario" method="post">
                    @*OBTENEMOS EL ID DEL USUARIO PERO SE LO OCULTAMOS AL USUARIO*@
                    <input type="hidden" asp-for="PkUser" />
                    <div class="form-group">
                        <label asp-for="Nombre">Nombre</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre a eliminar" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="User">Usuario</label>
                        <input asp-for="User" class="form-control" placeholder="Ingrese el nombre de usuario a eliminar" required />
                    </div>
                    <div class="confirmacion">¿Desea eliminar usuario?</div>
                    <div class="container-fluid">
                        <button type="submit" class="btn btn-outline-success">
                            <i class="fa-solid fa-plus"></i> Si
                        </button>
                        <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Index">
                            <i class="fa-solid fa-arrow-rotate-left"></i> No
                        </a>
                    </div>
                </form>
                <br />
            </div>
        </div>
    </div>
</div>